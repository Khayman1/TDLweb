<%- include('./include/header') %>

<!-- Main -->
<div id="todo-container">
  <h2>To-Do List</h2>
  <ul id="todo-list"></ul>
  <form action="/todo" method="POST" class="add-todo">
    <input type="text" name="title" class="title" placeholder="제목">
    <input type="text" name="body" class="body" placeholder="내용">
    <button class="add-button">Add</button>
  </form>
  <table>
    <% todo.forEach(todo => { %>
      <tr>
        <td>
          <form action="/todo/<%=todo._id%>?_method=PUT" class="task" method="POST">
            <input type="checkbox" name="check" <% if (todo.check) { %> checked <% } %> >
            <input type="text" name="title" class="task-title" value="<%=todo.title%>">
            <input type="text" name="body" class="task-body" value="<%=todo.body%>">
            <input type="submit" value="수정">
          </form>
        </td>
        <td>
          <form action="/todo/<%=todo._id%>?_method=DELETE" method="POST">
            <input type="submit" value="삭제">
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</div>

<!-- /Main -->

<%- include('./include/footer') %>

