<%- include('./include/header') %>

<!-- Main -->
<div id="todo-container">
  <h2>To-Do List</h2>
  <ul id="todo-list"></ul>
  <form action="/todo" method="POST" id="add-todo">
    <input type="text" name="title" id="title" placeholder="제목">
    <input type="text" name="body" id="body" placeholder="내용">
    <button id="add-button">Add</button>
  </form>
  <table>
    <% todo.forEach(todo => { %>
      <tr>
        <td>
          <form action="/todo/<%=todo._id%>?_method=PUT" method="POST">
            <input type="text" name="title" value="<%=todo.title%>">
            <input type="text" name="body" value="<%=todo.body%>">
            <input type="submit" value="수정">
          </form>
        </td>
        <td>
          <form action="/todo/<%=todo._id%>?_method=DELETE" method="POST">
            <input type="submit" value="삭제">
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</div>
<!-- /Main -->

<%- include('./include/footer') %>

